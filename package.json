{
  "name": "mono",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "prepare": "husky",
    "filter:ds": "pnpm --filter design-system",
    "filter:pf": "pnpm --filter portfolio",
    "filter:wt": "pnpm --filter web-tools",
    "filter:ui": "pnpm --filter @repo/ui"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "turbo": "^2.4.0"
  },
  "packageManager": "pnpm@10.2.0",
  "engines": {
    "node": ">=22"
  }
}
